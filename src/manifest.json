{
    "manifest_version": 2,
    "name": "ProTip",
    "short_name": "ProTip",
    "description": "ProTip makes peer to peer payments, tipping, and crowd funding easy as well weekly subscriptions and content payments for premium work.",
    "applications": {
        "gecko": {
            "id": "protip@protip.is"
        }
    },
    "homepage_url": "https://protip.is",
    "version": "1.0.0.50",
    "background": {
        "scripts": [
            "/libs/webextension-polyfill/dist/browser-polyfill.min.js",
            "/libs/ydn.db/jsc/ydn.db.js",
            "/js/ydn.db.schema.js",
            "/js/bundle.js",
            "/background.js"
        ]
    },
    "web_accessible_resources": [
        "/images/star.png",
        "/fonts/*"
    ],
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": [
            "/libs/webextension-polyfill/dist/browser-polyfill.min.js",
            "/libs/ydn.db/jsc/ydn.db.js",
            "/js/ydn.db.schema.js",
            "/js/bundle.js",
            "/content.js"
        ],
        "css": [
            "/libs/bootstrap/*",
            "/libs/switchery/standalone/switchery.css",
            "/libs/font-awesome/css/font-awesome.min.css",
            "/css/protip.css"
        ]
    }],
    "options_ui": {
        "page": "/views/options.html"
    },
    "icons": {
        "16": "/images/heart16x16.png",
        "48": "/images/heart48x48.png",
        "128": "/images/heart128x128.png"
    },
    "browser_action": {
        "default_icon": "/images/heart48x48_passive.png",
        "default_popup": "/views/popup.html",
        "default_title": "ProTip"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
    "permissions": [
        "idle",
        "tabs",
        "storage",
        "alarms",
        "notifications",
        "https://api.blockcypher.com/*, http://blockchain.info/*, https://blockchain.info/*, wss://ws.blockchain.info:*, https://apiv2.bitcoinaverage.com/indices/global/ticker/short"
    ]
}
